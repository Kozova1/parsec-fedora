#!/bin/bash
if cat /etc/os-release | grep -q 'opensuse'; then
  wget -o tmp/alien.rpm ftp://ftp.pbone.net/mirror/ftp5.gwdg.de/pub/opensuse/repositories/home:/X0F/openSUSE_Tumbleweed/x86_64/alien-8.88-4.1.x86_64.rpm
  yes| sudo rpm -i --force tmp/alien.rpm
else
  sudo dnf install alien
fi
cd ~/
wget -o tmp/parsec https://s3.amazonaws.com/parsec-build/package/parsec-linux.deb
sudo alien -r tmp/parsec-linux.deb
yes | sudo rpm -i --force tmp/parsec
rm -rf tmp
echo "Now use parsecd in the terminal to start parsec."
echo "Enjoy Gaming!"
